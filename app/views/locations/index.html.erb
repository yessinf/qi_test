<div class="row">
	<div class="col-4">
		<div class="list-group">
			<% @locations.each_with_index do |location, idx| %>
			  <a href="javascript:void(0)" class="link-location list-group-item list-group-item-action <%= 'active' if idx.eql?(0) %>" data-longitude="<%= location.longitude %>" data-latitude="<%= location.latitude %>" data-id="<%= idx %>">
			    <%= location.address %>
			  </a>
			<% end %>
		</div>
	</div>
	<div class="col-8">
		<div id="show-map" class="show-map"></div>
	</div>
</div>